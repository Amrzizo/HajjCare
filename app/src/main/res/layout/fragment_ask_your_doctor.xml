<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/background"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="88dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/header3" />


        <ImageView
            android:id="@+id/imageView_strock"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="27.2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/header3_strock" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:lines="2"
            android:text="@string/str_ask_your_doctor"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />



        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/calendare_bg" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@mipmap/call_bg" />

        <ImageView
            android:id="@+id/book_now"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20"
            app:layout_constraintEnd_toEndOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/imageView20"
            app:srcCompat="@mipmap/calendare_home" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView21"
            app:srcCompat="@mipmap/call_home" />


        <Button
            android:id="@+id/ask_doctor"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/send_message"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="@string/str_ask_your_doctor"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/def_medium_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/ask_doctor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/email_edit_text_linear_linear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/login_edit_text_padding"
                        android:layout_marginStart="@dimen/login_edit_text_padding"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:src="@mipmap/username_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorPrimary" />

                        <EditText

                            android:id="@+id/email_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="start|center_vertical"
                            android:hint="@string/str_signup_user_name_txt"
                            android:inputType="textEmailAddress" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/mail_edit_text_linear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/login_edit_text_padding"
                        android:layout_marginStart="@dimen/login_edit_text_padding"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email_edit_text_linear_linear">


                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:src="@mipmap/mail_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/mail_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@null"
                            android:ems="20"
                            android:gravity="start|center_vertical"
                            android:hint="@string/str_signup_mail_txt"
                            android:inputType="textEmailAddress" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mobile_edit_text_linear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/login_edit_text_padding"
                        android:layout_marginStart="@dimen/login_edit_text_padding"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mail_edit_text_linear">


                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:src="@mipmap/mobile_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/mobile_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@null"
                            android:ems="20"
                            android:gravity="start|center_vertical"
                            android:hint="@string/str_signup_mobile_txt"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/message_subject_edit_txt_linear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginEnd="@dimen/login_edit_text_padding"
                        android:layout_marginStart="@dimen/login_edit_text_padding"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.233"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mobile_edit_text_linear">


                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="13dp"
                            android:src="@mipmap/message_icon" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="7dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/message_subject_edit_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@null"
                            android:ems="20"
                            android:gravity="start|center_vertical"
                            android:hint="@string/str_message_subject_txt"
                            android:inputType="text" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/message_body_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="@dimen/login_edit_text_padding"
                        android:layout_marginStart="@dimen/login_edit_text_padding"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corner_bg"
                        android:ems="20"
                        android:gravity="top"
                        android:hint="@string/str_message_txt"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.233"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/message_subject_edit_txt_linear" />

                    <Button
                        android:id="@+id/send_message_button"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/detials"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="5dp"
                        android:text="@string/str_send_message_button_txt"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_medium_text_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/message_body_edit_text" />

                </android.support.constraint.ConstraintLayout>

            </ScrollView>
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



</LinearLayout>