<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/email_edit_text_linear_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/username_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/email_edit_text_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="@string/str_signup_user_name_txt"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mail_edit_text_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_edit_text_linear_linear" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/mail_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_signup_mail_txt"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobile_edit_text_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mail_edit_text_linear" >


                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/mobile_icon" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/mobile_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_signup_mobile_txt"
                    android:inputType="number"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/branch_edit_txt_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mobile_edit_text_linear">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/branch_id" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/branch_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_branch_txt"
                    android:inputType="text"
                    android:paddingEnd="5dp"
                    android:drawableEnd="@mipmap/spinner_arrow"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/how_did_you_know_edit_txt_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/branch_edit_txt_linear" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/speciality" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/how_did_you_know_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_how_did_you_know_txt"
                    android:inputType="text"
                    android:paddingEnd="5dp"
                    android:drawableEnd="@mipmap/spinner_arrow"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_method_edit_txt_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/how_did_you_know_edit_txt_linear" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/payment_method" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/payment_method_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_payment_method_txt"
                    android:inputType="text"
                    android:paddingEnd="5dp"
                    android:drawableEnd="@mipmap/spinner_arrow"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/speciality_edit_txt_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payment_method_edit_txt_linear" >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="13dp"
                    android:src="@mipmap/how_do_know_about_us" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/speciality_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="20"
                    android:hint="@string/str_speciality_txt"
                    android:inputType="text"
                    android:paddingEnd="5dp"
                    android:drawableEnd="@mipmap/spinner_arrow"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="start|center_vertical" />
            </LinearLayout>


            <EditText
                android:id="@+id/others_edit_text"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginEnd="@dimen/login_edit_text_padding"
                android:layout_marginStart="@dimen/login_edit_text_padding"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner_bg"
                android:gravity="top"
                android:hint="@string/str_other_txt"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speciality_edit_txt_linear" />

            <Button
                android:id="@+id/send_message_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@mipmap/send_message"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp"
                android:text="@string/str_send_message_button_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/def_medium_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/others_edit_text" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>